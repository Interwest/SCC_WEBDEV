@model sccweb.Models.Page
@{
    ViewBag.Title = "Delete";
}
@RenderPage("../Shared/PanelMenu.cshtml")
<div class="panel panel-body">
        @Html.AntiForgeryToken()

    <div class="form-horizontal form-delete">
        @using (Html.BeginForm("Delete", "Pages", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row form-header">
                <div class="col-sm-6">
                    <h4>Delete Page</h4>
                </div>
                <div class="col-sm-6">

                    <p class="text-right">
                        Are you sure you want to delete this?
                    </p>

                    <p class="text-right">
                        <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
                        <a href="@Url.Action("Index")" class="btn btn-default btn-sm">
                            Back to List
                        </a>
                    </p>
                </div>
            </div>
        }
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Title)
            </div>
        </div>

        <div class="row form-group">
            @Html.LabelFor(model => model.Summary, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Summary)
            </div>
        </div>

        <div class="row form-group">
            @Html.LabelFor(model => model.Maintext, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="page-main page-main-text textcontent">
                    @Html.DisplayTextFor(model => model.Maintext)
                </div>
                <div class="page-main page-plaintext"></div>
            </div>
        </div>

        <div class="row form-group">
            @Html.LabelFor(model => model.Created, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayTextFor(model => model.Created)
            </div>
        </div>
        <div class="row form-group">
            @Html.Label("Image", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <img src="/Pages/RetrieveImage/@Html.DisplayFor(model => model.Id)" alt="" width="200" />
            </div>
        </div>
        <div class="row form-group">
            @Html.LabelFor(model => model.Publish, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span class="pub -yes">
                    <span class="pl">Yes</span>
                    @Html.RadioButtonFor(model => model.Publish, "1")
                </span>
                <span class="pub -no">
                    <span class="pl">No</span>
                    @Html.RadioButtonFor(model => model.Publish, "0")
                </span>


                @Html.ValidationMessageFor(model => model.Publish, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row form-group">
            @Html.LabelFor(model => model.MetaKeywords, "Meta Keywords", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayTextFor(model => model.MetaKeywords)
            </div>
        </div>
        <div class="row form-group">
            @Html.LabelFor(model => model.MetaDescription, "Meta Description", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayTextFor(model => model.MetaDescription)
            </div>
        </div>

        <div class="row form-group">
            @Html.LabelFor(model => model.AuthorId, "Author", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayTextFor(model => model.AuthorId)
            </div>
        </div>
        <div class="row form-group">
            @Html.LabelFor(model => model.ParentId, "Parent Page", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayTextFor(model => model.ParentId)
            </div>
        </div>
    </div> 
</div>
